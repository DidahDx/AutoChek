<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.carDetails.CarDetailsFragment">

    <include
        android:id="@+id/container"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="8dp"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Car name" />

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="@string/car_image"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_car" />

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/videoView"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_car"  />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_car_images"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                tools:listitem="@layout/item_car_media" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="iv_car,rv_car_images" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_car_images" />

            <TextView
                android:id="@+id/tv_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/car_name"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_car_name_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <TextView
                android:id="@+id/tv_car_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_car_name"
                app:layout_constraintTop_toBottomOf="@id/tv_price"
                tools:text="Acura MDX - 2021" />

            <TextView
                android:id="@+id/tv_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/model"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_model_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_car_name" />

            <TextView
                android:id="@+id/tv_model_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_model"
                app:layout_constraintTop_toBottomOf="@id/tv_car_name"
                tools:text="Bmw" />

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/year"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_year_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_model" />

            <TextView
                android:id="@+id/tv_year_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_year"
                app:layout_constraintTop_toBottomOf="@id/tv_model"
                tools:text="2021" />

            <TextView
                android:id="@+id/tv_engine_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/engine_type"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_engine_type_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_year" />

            <TextView
                android:id="@+id/tv_engine_type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_engine_type"
                app:layout_constraintTop_toBottomOf="@id/tv_year"
                tools:text="3-cylinder(I3)" />

            <TextView
                android:id="@+id/tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/mileage"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_mileage_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_engine_type" />

            <TextView
                android:id="@+id/tv_mileage_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_mileage"
                app:layout_constraintTop_toBottomOf="@id/tv_engine_type"
                tools:text="1000 km" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/location"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_location_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mileage" />

            <TextView
                android:id="@+id/tv_location_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_location"
                app:layout_constraintTop_toBottomOf="@id/tv_mileage"
                tools:text="Kampala Lagos KE" />

            <TextView
                android:id="@+id/tv_owner_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/owner_type"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_owner_type_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_location" />

            <TextView
                android:id="@+id/tv_owner_type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_owner_type"
                app:layout_constraintTop_toBottomOf="@id/tv_location"
                tools:text="Company" />

            <TextView
                android:id="@+id/tv_transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/transmission"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_transmission_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_owner_type" />

            <TextView
                android:id="@+id/tv_transmission_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_transmission"
                app:layout_constraintTop_toBottomOf="@id/tv_owner_type"
                tools:text="Automatic" />

            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/selling_condition"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_condition_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_transmission" />

            <TextView
                android:id="@+id/tv_condition_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_condition"
                app:layout_constraintTop_toBottomOf="@id/tv_transmission"
                tools:text="new" />

            <TextView
                android:id="@+id/tv_fuel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/fuel_type"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_fuel_type_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_condition" />

            <TextView
                android:id="@+id/tv_fuel_type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_fuel_type"
                app:layout_constraintTop_toBottomOf="@id/tv_condition"
                tools:text="petrol" />

            <TextView
                android:id="@+id/tv_body_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/body_type"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_body_type_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_fuel_type" />

            <TextView
                android:id="@+id/tv_body_type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_body_type"
                app:layout_constraintTop_toBottomOf="@id/tv_fuel_type"
                tools:text="Convertible" />


            <TextView
                android:id="@+id/tv_interior_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/interior_color"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_interior_color_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_body_type" />

            <TextView
                android:id="@+id/tv_interior_color_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_interior_color"
                app:layout_constraintTop_toBottomOf="@id/tv_body_type"
                tools:text="Red" />

            <TextView
                android:id="@+id/tv_exterior_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="@string/exterior_color"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_exterior_color_detail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_interior_color" />

            <TextView
                android:id="@+id/tv_exterior_color_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_exterior_color"
                app:layout_constraintTop_toBottomOf="@id/tv_interior_color"
                tools:text="White" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/progress_bar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading" />


            <Button
                android:id="@+id/retry_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error" />

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_car_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="tv_body_type,tv_body_type_detail,
        tv_car_name,tv_car_name_detail,tv_condition,tv_condition_detail,tv_year,tv_year_detail,
        tv_model,tv_model_detail,tv_engine_type,tv_engine_type_detail,tv_mileage,tv_mileage_detail,
        tv_location,tv_location_detail,tv_owner_type,tv_owner_type_detail,tv_transmission,tv_transmission_detail,
        tv_fuel_type,tv_fuel_type_detail,tv_interior_color,tv_interior_color_detail,tv_exterior_color,
        tv_exterior_color_detail,tv_price,tv_car" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_begin="360dp"
                app:layout_constraintTop_toBottomOf="parent" />

            <ImageView
                android:id="@+id/tv_sold"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/sold"
                android:src="@drawable/ic_sold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/rv_car_images" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>